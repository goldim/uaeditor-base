{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "module": "ES6",
      "target": "ES6",
      "moduleResolution": "node",

      "strict": true,
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "sourceMap": true,

      "removeComments": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}